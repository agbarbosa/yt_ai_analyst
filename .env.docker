# ============================================================================
# YouTube AI Analyst - Docker Environment Configuration
# ============================================================================
# Copy this file to .env and configure with your actual values
# Usage: docker-compose --env-file .env up -d

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
NODE_ENV=production
PORT=3000
APP_PORT=3000
API_BASE_URL=http://localhost:3000

# ============================================================================
# YOUTUBE API CREDENTIALS
# ============================================================================
# Get credentials from: https://console.cloud.google.com/
# Enable: YouTube Data API v3 and YouTube Analytics API
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_CLIENT_ID=your_client_id_here.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your_client_secret_here
YOUTUBE_REDIRECT_URI=http://localhost:3000/auth/callback

# ============================================================================
# AI SERVICE CREDENTIALS
# ============================================================================
# Anthropic Claude (Required)
# Get key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# OpenAI (Optional - for alternative model)
OPENAI_API_KEY=

# Google AI (Optional - for Gemini)
GOOGLE_AI_API_KEY=

# ============================================================================
# DATABASE - POSTGRESQL
# ============================================================================
POSTGRES_DB=yt_ai_analyst
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YourSecurePostgresPassword123!
POSTGRES_PORT=5432

# ============================================================================
# DATABASE - MONGODB
# ============================================================================
MONGODB_DB=yt_ai_analyst
MONGODB_PORT=27017

# ============================================================================
# REDIS (Cache & Job Queue)
# ============================================================================
REDIS_PORT=6379
REDIS_PASSWORD=YourSecureRedisPassword123!

# ============================================================================
# SECURITY
# ============================================================================
# JWT Secret (Must be at least 32 characters)
JWT_SECRET=your-jwt-secret-key-minimum-32-characters-long-change-me
JWT_EXPIRY=7d
BCRYPT_ROUNDS=12

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# ============================================================================
# DATA COLLECTION
# ============================================================================
DATA_COLLECTION_INTERVAL_HOURS=6
ANALYTICS_RETENTION_DAYS=90

# ============================================================================
# AI CONFIGURATION
# ============================================================================
AI_PRIMARY_MODEL=claude-sonnet-4.5
AI_TEMPERATURE_ANALYTICAL=0.3
AI_TEMPERATURE_CREATIVE=0.6
AI_MAX_TOKENS=4000

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_SHORTS_ANALYSIS=true
ENABLE_COMPETITOR_ANALYSIS=false
ENABLE_REALTIME_UPDATES=true

# ============================================================================
# MONITORING (Optional)
# ============================================================================
SENTRY_DSN=
DATADOG_API_KEY=

# ============================================================================
# ADMIN TOOLS (Optional - only used with --profile admin)
# ============================================================================
# pgAdmin
PGADMIN_EMAIL=admin@ytanalyst.local
PGADMIN_PASSWORD=YourSecurePgAdminPassword123!
PGADMIN_PORT=5050

# Mongo Express
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=YourSecureMongoExpressPassword123!
MONGO_EXPRESS_PORT=8081

# Redis Commander
REDIS_COMMANDER_PORT=8082
